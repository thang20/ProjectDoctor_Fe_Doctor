<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center|left"
        android:orientation="horizontal"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imv_home_home3_doctor_toa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/service1">

        </ImageView>




    </LinearLayout>
    <LinearLayout
        android:gravity="center|left"
        android:orientation="horizontal"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:src="@drawable/homeonext2"
            android:layout_width="50dp"
            android:layout_height="50dp">

        </ImageView>
        <TextView
            android:layout_marginStart="15dp"
            android:text="User Information"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>



    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/carepay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center|left"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:padding="10dp"
                    android:text="Name"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txt_home_home3_doctor_name"
                    android:textStyle="bold"
                    android:paddingEnd="10dp"
                    android:padding="10dp"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center|left"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:padding="10dp"
                    android:text="Phone"

                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:layout_weight="1.6"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txt_home_home3_doctor_phone"
                    android:textStyle="bold"
                    android:paddingEnd="10dp"
                    android:padding="10dp"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center|left"
                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:padding="10dp"
                    android:text="Address"

                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:layout_weight="1.4"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_home_home3_doctor_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:paddingEnd="10dp"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold">

                </TextView>

            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center|left"
                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:padding="10dp"
                    android:text="ID"

                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:layout_weight="1.4"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_home_home3_doctor_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:paddingEnd="10dp"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold">

                </TextView>

            </LinearLayout>



        </LinearLayout>
        <Button
            android:id="@+id/btn_home_home3_doctor_next"
            android:layout_marginHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#2BC4BF"
            android:text="Call"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>